---
import type { CollectionEntry } from 'astro:content';

interface Props {
  principles: CollectionEntry<'principles'>[];
}

const { principles } = Astro.props;

const categoryColors: Record<string, string> = {
  'Memory & Retention': 'bg-purple-100 text-purple-800',
  'Practice & Skill Building': 'bg-green-100 text-green-800',
  'Motivation & Engagement': 'bg-orange-100 text-orange-800',
  'Cognitive Load': 'bg-blue-100 text-blue-800',
  'Feedback & Assessment': 'bg-yellow-100 text-yellow-800',
  'Transfer & Application': 'bg-pink-100 text-pink-800',
};
---

<section class="mb-12 -mx-4 sm:-mx-6 lg:-mx-8 px-4 sm:px-6 lg:px-8 py-8 bg-gradient-to-b from-slate-100 to-slate-50 rounded-lg">
  <div class="flex items-center gap-2 mb-2">
    <svg class="w-5 h-5 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
    </svg>
    <h2 class="text-xl font-bold text-slate-900">Essential Principles</h2>
  </div>
  <p class="text-slate-600 text-sm mb-6">The foundational concepts every learning designer should know</p>

  <div class="grid gap-3 sm:grid-cols-2 lg:grid-cols-3">
    {principles.map((principle) => (
      <a
        href={`/principles/${principle.id}`}
        class="block bg-white rounded-lg border border-slate-200 p-4 hover:shadow-md hover:border-slate-300 hover:-translate-y-0.5 transition-all"
      >
        <span class={`inline-block px-2 py-0.5 rounded text-xs font-medium mb-2 ${categoryColors[principle.data.category]}`}>
          {principle.data.category}
        </span>
        <h3 class="text-base font-semibold text-slate-900 mb-1">{principle.data.title}</h3>
        <p class="text-slate-600 text-sm line-clamp-2">{principle.data.summary}</p>
      </a>
    ))}
  </div>
</section>
