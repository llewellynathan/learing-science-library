---
import type { CollectionEntry } from 'astro:content';

interface Props {
  principle: CollectionEntry<'principles'>;
}

const { principle } = Astro.props;
const { title, category, summary } = principle.data;

const categoryColors: Record<string, string> = {
  'Memory & Retention': 'bg-purple-100 text-purple-800 border-purple-200',
  'Practice & Skill Building': 'bg-green-100 text-green-800 border-green-200',
  'Motivation & Engagement': 'bg-orange-100 text-orange-800 border-orange-200',
  'Cognitive Load': 'bg-blue-100 text-blue-800 border-blue-200',
  'Feedback & Assessment': 'bg-yellow-100 text-yellow-800 border-yellow-200',
  'Transfer & Application': 'bg-pink-100 text-pink-800 border-pink-200',
};
---

<a
  href={`/principles/${principle.id}`}
  class="principle-card block bg-white rounded-lg border border-slate-200 p-6 hover:shadow-md hover:border-slate-300 transition-all"
  data-category={category}
>
  <span class={`inline-block px-2 py-0.5 rounded text-xs font-medium mb-3 ${categoryColors[category]}`}>
    {category}
  </span>
  <h2 class="text-xl font-semibold text-slate-900 mb-2">{title}</h2>
  <p class="text-slate-600 text-sm line-clamp-3">{summary}</p>
</a>
