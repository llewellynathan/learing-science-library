---
interface Props {
  categories: string[];
}

const { categories } = Astro.props;

const categoryColors: Record<string, string> = {
  'Memory & Retention': 'bg-purple-100 text-purple-800 hover:bg-purple-200',
  'Practice & Skill Building': 'bg-green-100 text-green-800 hover:bg-green-200',
  'Motivation & Engagement': 'bg-orange-100 text-orange-800 hover:bg-orange-200',
  'Cognitive Load': 'bg-blue-100 text-blue-800 hover:bg-blue-200',
  'Feedback & Assessment': 'bg-yellow-100 text-yellow-800 hover:bg-yellow-200',
  'Transfer & Application': 'bg-pink-100 text-pink-800 hover:bg-pink-200',
};
---

<div class="flex flex-wrap gap-2 mb-8" id="category-filter">
  <button
    type="button"
    data-category=""
    class="category-btn px-3 py-1.5 rounded-full text-sm font-medium transition-colors bg-slate-900 text-white"
  >
    All
  </button>
  {categories.map((category) => (
    <button
      type="button"
      data-category={category}
      class={`category-btn px-3 py-1.5 rounded-full text-sm font-medium transition-colors ${categoryColors[category]}`}
    >
      {category}
    </button>
  ))}
</div>
