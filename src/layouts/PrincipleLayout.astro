---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  principle: CollectionEntry<'principles'>;
}

const { principle } = Astro.props;
const { title, category, tags, keyResearchers, relatedPrinciples, summary } = principle.data;

const categoryColors: Record<string, string> = {
  'Memory & Retention': 'bg-purple-100 text-purple-800',
  'Practice & Skill Building': 'bg-green-100 text-green-800',
  'Motivation & Engagement': 'bg-orange-100 text-orange-800',
  'Cognitive Load': 'bg-blue-100 text-blue-800',
  'Feedback & Assessment': 'bg-yellow-100 text-yellow-800',
  'Transfer & Application': 'bg-pink-100 text-pink-800',
};
---

<BaseLayout title={title} description={summary}>
  <article class="principle-article max-w-2xl mx-auto">
    <!-- Header -->
    <header class="mb-12">
      <a
        href={`/?category=${encodeURIComponent(category)}`}
        class={`inline-block px-3 py-1 rounded-full text-sm font-medium mb-6 ${categoryColors[category]}`}
      >
        {category}
      </a>
      <h1 class="text-[2rem] leading-tight font-bold text-slate-900 mb-4">{title}</h1>
      <p class="text-slate-600">{summary}</p>
      {keyResearchers && keyResearchers.length > 0 && (
        <p class="text-sm text-slate-400 mt-6">
          <span class="uppercase tracking-wide text-xs font-medium text-slate-400">Key researchers</span>
          <br />
          <span class="text-slate-500">{keyResearchers.join(' Â· ')}</span>
        </p>
      )}
    </header>

    <!-- Content -->
    <div class="principle-content">
      <slot />
    </div>

    <!-- Footer tags -->
    {tags && tags.length > 0 && (
      <footer class="mt-16 pt-8 border-t border-slate-200">
        <span class="block text-xs uppercase tracking-wide font-medium text-slate-400 mb-3">Topics</span>
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class="px-3 py-1 bg-slate-100 text-slate-500 rounded-full text-sm">
              {tag}
            </span>
          ))}
        </div>
      </footer>
    )}
  </article>
</BaseLayout>
