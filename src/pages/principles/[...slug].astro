---
import { getCollection, render } from 'astro:content';
import PrincipleLayout from '../../layouts/PrincipleLayout.astro';

export async function getStaticPaths() {
  const principles = await getCollection('principles');
  return principles.map((principle) => ({
    params: { slug: principle.id },
    props: { principle },
  }));
}

const { principle } = Astro.props;
const { Content } = await render(principle);
---

<PrincipleLayout principle={principle}>
  <Content />
</PrincipleLayout>
